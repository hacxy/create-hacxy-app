{
  "name": "create-hacxy-app",
  "type": "module",
  "version": "1.0.2",
  "description": "Create a project using TypeScript as the default language.",
  "author": {
    "name": "hacxy",
    "email": "hacxy.js@outlook.com"
  },
  "license": "MIT",
  "keywords": [
    "cli",
    "create-typescript-project"
  ],
  "bin": {
    "create-hacxy-app": "index.js"
  },
  "files": [
    "dist",
    "index.js",
    "templates"
  ],
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "unbuild --stub",
    "build": "unbuild",
    "build:out": "tsc -p tsconfig.build.json",
    "commit": "git-cz",
    "typecheck": "tsc --noEmit",
    "release": "node scripts/release.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix",
    "prepare": "simple-git-hooks",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "sync": "node scripts/utils/sync-template.mjs",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.2.0",
    "consola": "^3.2.3",
    "kolorist": "^1.8.0",
    "minimist": "^1.2.8",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@hacxy/eslint-config": "^0.0.4",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.12.5",
    "@vitest/coverage-istanbul": "2.1.8",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cz-git": "^1.11.0",
    "degit": "^2.8.4",
    "eslint": "^9.16.0",
    "execa": "^9.5.2",
    "lint-staged": "^15.2.11",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2",
    "semver": "^7.6.3",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.2",
    "unbuild": "^3.0.1",
    "vitest": "^2.1.8"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "node scripts/git-hooks/commit-msg.mjs"
  },
  "lint-staged": {
    "*": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "useEmoji": false
    }
  }
}
